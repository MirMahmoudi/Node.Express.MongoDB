<%- include('../components/header') %>
  <h1 class="header">Q & A Community</h1>

  <div class="log">
    <form method="POST" action="/signUp" class="log_form">
      <h2>Sign Up</h2>
      <div class="mb-3">
        <label for="userName" class="form-label">User Name</label>
        <input value="<%= result?.userName%>" name="userName" type="text" class="form-control" id="userName" >
        <small class="form-text warning userName"><%= error?.userName %> </small>
      </div>
      <div class="mb-3">
        <label for="email2" class="form-label">Email address</label>
        <input value="<%= result?.email%>" name="email" type="email" class="form-control" id="email2" >
        <small class="form-text warning email"><%= error?.email %> </small>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" id="password">
        <small class="form-text warning password"><%= error?.password %> </small>
      </div>
      <button type="submit" class="btn btn-primary">Sign up</button>
    </form>
  </div>
<%- include('../components/footer') %>