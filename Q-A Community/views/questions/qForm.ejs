<div class="log">

  <form method="POST"
    <% if(result) { %>
      action="/updateQuestion/<%= result._id %> "
    <% }else{ %>
      action="/askQuestion"
    <% } %> 
  class="log_form">
    
    <div class="mb-3">
      <label for="question" class="form-label">Question :</label>
      <input name="question" type="text" class="form-control" value="<%= result?.question || newQuestion?.question %>" id="question">
      <small class="form-text warning question"><%= error?.question %> </small>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description :</label>
      <input name="description" type="text" class="form-control" value="<%= result?.description || newQuestion?.description %>" id="description">
      <small class="form-text warning description"><%= error?.description %> </small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <% if(result) { %>
      <a href="/showQuestion/<%= result._id %>">
    <% }else{ %>
      <a href="/">
    <% } %> 
      <button type="button" class="btn btn-warning">Cancel</button>
    </a>

  </form>

</div>